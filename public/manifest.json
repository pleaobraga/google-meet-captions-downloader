{
  "name": "Google Meet Captions Downloader",
  "description": "Download transcripts from Google Meet and save them as files.",
  "version": "1.0.0",
  "manifest_version": 3,

  "action": {},

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": ["downloads", "scripting", "activeTab", "windows"],

  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
