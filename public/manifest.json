{
  "name": "Google Meet Captions Downloader",
  "description": "Download transcripts from Google Meet and save them as files.",
  "version": "1.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "index.html",
    "default_title": "Google Meet Captions Downloader"
  },

  "permissions": ["downloads", "scripting", "activeTab"],

  "host_permissions": ["https://meet.google.com/*", "http://meet.google.com/*"],

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
